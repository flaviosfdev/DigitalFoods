<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/launcher_frag_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/launcher_frag_titulo"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="teste_title"
        app:layout_constraintEnd_toEndOf="@id/launcher_frag_img"
        app:layout_constraintStart_toStartOf="@id/launcher_frag_img"
        app:layout_constraintTop_toBottomOf="@id/launcher_frag_img" />

    <TextView
        android:id="@+id/launcher_frag_subtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:text="teste_subtitle"
        app:layout_constraintEnd_toEndOf="@id/launcher_frag_titulo"
        app:layout_constraintStart_toStartOf="@id/launcher_frag_titulo"
        app:layout_constraintTop_toBottomOf="@id/launcher_frag_titulo" />


</androidx.constraintlayout.widget.ConstraintLayout>